<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>org.ctoolkit.maven</groupId>
        <artifactId>ctoolkit-parent</artifactId>
        <version>5</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ctoolkit.restapi</groupId>
    <artifactId>ctoolkit-rest-facade-impl</artifactId>
    <version>0.21-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Uniform REST Client Parent Project</name>
    <description>Uniform client facade API implementation to perform common operations on top of REST.</description>
    <url>https://github.com/turnonline/ctoolkit-rest-facade-impl</url>

    <scm>
        <connection>scm:git:[fetch=]git@github.com:turnonline/ctoolkit-rest-facade-impl.git</connection>
        <developerConnection>scm:git:[push=]git@github.com:turnonline/ctoolkit-rest-facade-impl.git</developerConnection>
        <url>https://github.com/turnonline/ctoolkit-rest-facade-impl</url>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <url>https://github.com/turnonline/ctoolkit-rest-facade-impl/issues</url>
    </issueManagement>

    <developers>
        <developer>
            <name>Aurel Medvegy</name>
            <id>medvegy</id>
            <email>aurel.medvegy@ctoolkit.org</email>
        </developer>
    </developers>

    <modules>
        <module>adapter</module>
        <module>appengine</module>
        <module>analytics</module>
        <module>drive</module>
        <module>identity-toolkit</module>
        <module>maps</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
                <configuration>
                    <argLine>-Xmx128m ${jmockit.setting}</argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.google.appengine</groupId>
                <artifactId>appengine-api-1.0-sdk</artifactId>
                <version>${appengine.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.appengine</groupId>
                <artifactId>appengine-jsr107cache</artifactId>
                <version>${appengine.version}</version>
            </dependency>
            <dependency>
                <groupId>org.ctoolkit.maven</groupId>
                <artifactId>ctoolkit-library-bom</artifactId>
                <version>${ctoolkit-library-bom.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.ctoolkit.restapi</groupId>
                <artifactId>ctoolkit-rest-facade-api</artifactId>
                <version>${ctoolkit-rest-facade-api.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.apis</groupId>
                <artifactId>google-api-services-analytics</artifactId>
                <version>${google-api-services-analytics.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.apis</groupId>
                <artifactId>google-api-services-drive</artifactId>
                <version>${google-api-services-drive.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.apis</groupId>
                <artifactId>google-api-services-identitytoolkit</artifactId>
                <version>${google-api-services-identitytoolkit.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.identitytoolkit</groupId>
                <artifactId>gitkitclient</artifactId>
                <version>${gitkitclient.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.maps</groupId>
                <artifactId>google-maps-services</artifactId>
                <version>${google-maps-services.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>com.squareup.okhttp</groupId>
                        <artifactId>okhttp</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.google.appengine</groupId>
                <artifactId>appengine-testing</artifactId>
                <version>${appengine.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>com.google.appengine</groupId>
                <artifactId>appengine-api-stubs</artifactId>
                <version>${appengine.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.jmockit</groupId>
                <artifactId>jmockit</artifactId>
                <version>${jmockit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.testng</groupId>
                <artifactId>testng</artifactId>
                <version>6.9.10</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.ctoolkit.test</groupId>
                <artifactId>ctoolkit-test</artifactId>
                <version>1.2</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <ctoolkit-library-bom.version>3</ctoolkit-library-bom.version>
        <appengine.version>1.9.48</appengine.version>
        <ctoolkit-rest-facade-api.version>0.14</ctoolkit-rest-facade-api.version>
        <google-api-services-analytics.version>v3-rev134-1.22.0</google-api-services-analytics.version>
        <google-api-services-drive.version>v3-rev58-1.22.0</google-api-services-drive.version>
        <google-api-services-identitytoolkit.version>v3-rev232-1.22.0</google-api-services-identitytoolkit.version>
        <google-maps-services.version>0.1.17</google-maps-services.version>
        <gitkitclient.version>1.2.7</gitkitclient.version>
        <jmockit.version>1.23</jmockit.version>
        <!-- jmockit settings for OpenJDK otherwise throws 'IllegalStateException: To run on OpenJDK 64-Bit Server VM use -javaagent..' -->
        <jmockit.setting>
            -javaagent:${settings.localRepository}/org/jmockit/jmockit/${jmockit.version}/jmockit-${jmockit.version}.jar
        </jmockit.setting>
    </properties>
</project>
